<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E4E4"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textview_titlehomescreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="@string/total_lists"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_topheader"
        app:layout_constraintEnd_toStartOf="@+id/guideline_leaftmargin"
        app:layout_constraintStart_toStartOf="@+id/guideline_rightmargin"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_upperheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.26" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottomheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_leaftmargin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_rightmargin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <TextView
        android:id="@+id/textview_totalbooks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_of_books"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/textView_finishedbooks"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_topheader" />

    <TextView
        android:id="@+id/textView_finishedbooks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/finished_books"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textview_titlehomescreen"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textview_totalbooks"
        app:layout_constraintStart_toStartOf="@+id/textview_titlehomescreen"
        app:layout_constraintTop_toTopOf="@+id/guideline_topheader" />

    <TextView
        android:id="@+id/textView_leftbooks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/books_left"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView_finishedbooks"
        app:layout_constraintTop_toTopOf="@+id/guideline_topheader" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_topheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.07" />

    <TextView
        android:id="@+id/textview_totalbooksValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textview_totalbooks"
        app:layout_constraintStart_toStartOf="@+id/textview_totalbooks"
        app:layout_constraintTop_toBottomOf="@+id/textview_totalbooks" />

    <TextView
        android:id="@+id/textview_totalbooksValue2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/textView_finishedbooks"
        app:layout_constraintStart_toStartOf="@+id/textView_finishedbooks"
        app:layout_constraintTop_toBottomOf="@+id/textView_finishedbooks" />

    <TextView
        android:id="@+id/textview_totalbooksValue3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/textView_leftbooks"
        app:layout_constraintStart_toStartOf="@+id/textView_leftbooks"
        app:layout_constraintTop_toBottomOf="@+id/textView_leftbooks" />

    <TextView
        android:id="@+id/textView_totalPages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/textview_totalPages"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textview_totalbooksValue"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/textview_totalbooksValue"
        app:layout_constraintTop_toBottomOf="@+id/textview_totalbooksValue" />

    <TextView
        android:id="@+id/textView_readpages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/read_pages"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textview_totalbooksValue2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/textview_totalbooksValue2"
        app:layout_constraintTop_toBottomOf="@+id/textview_totalbooksValue2" />

    <TextView
        android:id="@+id/textView_leftpages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/left_pages"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textview_totalbooksValue3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/textview_totalbooksValue3"
        app:layout_constraintTop_toBottomOf="@+id/textview_totalbooksValue3" />

    <TextView
        android:id="@+id/textView_totalpagesvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView_totalPages"
        app:layout_constraintStart_toStartOf="@+id/textView_totalPages"
        app:layout_constraintTop_toBottomOf="@+id/textView_totalPages" />

    <TextView
        android:id="@+id/textView_readpagesvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView_readpages"
        app:layout_constraintStart_toStartOf="@+id/textView_readpages"
        app:layout_constraintTop_toBottomOf="@+id/textView_readpages" />

    <TextView
        android:id="@+id/textView_leaftpagesvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView_leftpages"
        app:layout_constraintStart_toStartOf="@+id/textView_leftpages"
        app:layout_constraintTop_toBottomOf="@+id/textView_leftpages" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:paddingEnd="16px"
        android:progress="70"
        android:progressTint="#03A9F4"
        app:layout_constraintBottom_toTopOf="@+id/guideline_bottomheader"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline_rightmargin"
        app:layout_constraintTop_toTopOf="@+id/guideline_upperheader" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="346dp" />

    <TextView
        android:id="@+id/textView_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="70%"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/guideline_bottomheader"
        app:layout_constraintEnd_toStartOf="@+id/guideline_leaftmargin"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/guideline_upperheader" />

    <ListView
        android:id="@+id/listview_listofbooks"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_leaftmargin"
        app:layout_constraintStart_toStartOf="@+id/guideline_rightmargin"
        app:layout_constraintTop_toTopOf="@+id/guideline_bottomheader" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton_newlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        app:backgroundTint="#03A9F4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="24dp"
        app:srcCompat="@android:drawable/ic_menu_add" />

</androidx.constraintlayout.widget.ConstraintLayout>